page{
  box-sizing: border-box;
  padding: 12px 15px;
  width: 100%;
  min-height: 50vh;
  height: 100%;
  background: #fff;
  margin-top: 10px;
  font-size: 16px;
  line-height: 1.5;
}
.top-title{
  display: flex;    /*设置显示样式**/
  align-items: center;    /**子view垂直居中*/
  vertical-align: center; /**垂直居中*/
  justify-content: center; /**内容居中*/
  flex-direction:row; /**子view排列方式row--水平 column--垂直*/
  font-size: 24px;
  font-weight: bold;/**字体加粗*/
}
.foot_button{
  height: 18%;
  box-sizing: border-box;
  position: relative;/**生成绝对定位的元素，相对于浏览器窗口进行定位。 */
  bottom: 5px;
  padding-top: 15px;
  justify-content: center; /**内容居中*/
  flex-direction:row; /**子view排列方式row--水平 column--垂直*/
}
.select_one{
  display: block;
  padding: 10px 15px;
}
.cr_time{
  color: #8a8a8a;
  position: absolute;
  margin-top: 10px;
  right: 10px;
}
.issue{
  position: relative;
}
.answer{
  position:relative;
  margin-top: 50px;
  height: 100px;
}
.detail-container {
  display: flex;
  flex-direction: column;
}
.head-image {
  background-color: #ff6900;
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  height: 50px;
  width: 50px; 
  border-radius: 25px;
  vertical-align: middle;
}

.ans_avatar{
  height: 40px;
  width: 40px; 
  border-radius: 25px;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.ans_author {
  font-size: 20ans_rpx;
  font-weight: 260;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}
.circle-img button {
  width: 90rpx;
  height: 90rpx;
  float: right;
}

.share-img {
  margin-right: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 40rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 24rpx;
  font-family: MicroSoft Yahei;
}

